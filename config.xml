<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.PNC.QuQu7"
    versionCode = "10" 
    version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>QuQu7</name>

    <description>
      An application to optimize the time during queques. 
    </description>

    <author href="QuQu7" email="QuQu7@gmail.com">
      QuQu7 Team:
      Pietro Ilacqua
      Claudio Micheli
    </author>

    <!-- We'll include the Barcode plugin as an example -->
    <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    <gap:plugin name="com.phonegap.plugins.pushplugin " />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.3" />
    
 
    <!-- grafica -->
    <icon src="icon.png" />
	<icon src="img\drawable-mdpi\ic_launcher.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="img\drawable-hdpi\ic_launcher.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="img\drawable-xhdpi\ic_launcher.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="img\drawable-xxhdpi\ic_launcher.png" gap:platform="android" gap:qualifier="xxhdpi" />
